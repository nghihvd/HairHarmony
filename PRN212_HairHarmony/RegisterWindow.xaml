<Window x:Class="PRN212_HairHarmony.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_HairHarmony"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Background="#FFD5EFCD">
        <Grid.RowDefinitions>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="62*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="552,0,0,0" VerticalAlignment="Center" Height="34" Width="116" Background="#FF72B359" FontSize="16" FontWeight="Bold" Click="btnCancel_Click" Grid.Row="1" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="215,0,0,0" TextWrapping="Wrap" Text="HAIR HARMONY" VerticalAlignment="Top" Height="63" Width="419" FontWeight="Bold" TextAlignment="Center" FontSize="48" RenderTransformOrigin="0.5,0.5" FontFamily="VNI-Standout"/>
        <TextBlock HorizontalAlignment="Left" Height="36" Margin="198,72,0,0" TextWrapping="Wrap" Text="Register" VerticalAlignment="Top" Width="417" TextAlignment="Center" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="36" Margin="82,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" FontSize="18">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox x:Name="txtPhoneNumber" HorizontalAlignment="Left" Height="36" Margin="492,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" FontSize="18">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="82,191,0,0" VerticalAlignment="Top" Width="288" Height="36" FontSize="18">
            <PasswordBox.Effect>
                <DropShadowEffect/>
            </PasswordBox.Effect>
        </PasswordBox>
        <PasswordBox x:Name="txtConfirmPassword" HorizontalAlignment="Left" Margin="82,272,0,0" VerticalAlignment="Top" Width="288" Height="36" FontSize="18">
            <PasswordBox.Effect>
                <DropShadowEffect/>
            </PasswordBox.Effect>
        </PasswordBox>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="36" Margin="492,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" FontSize="18">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBlock HorizontalAlignment="Left" Height="46" Margin="424,113,0,0" TextWrapping="Wrap" Text="Phone number" VerticalAlignment="Top" Width="68" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Height="46" Margin="424,191,0,0" TextWrapping="Wrap" Text="Email address" VerticalAlignment="Top" Width="68" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="10,120,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="68" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.485,1.154"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="10,199,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="68" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.485,1.154"/>
        <TextBlock HorizontalAlignment="Left" Height="46" Margin="14,272,0,0" TextWrapping="Wrap" Text="Confirm password" VerticalAlignment="Top" Width="68" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Height="42" Margin="424,276,0,0" TextWrapping="Wrap" Text="Select role" VerticalAlignment="Top" Width="68" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.485,1.154"/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="126,0,0,0" VerticalAlignment="Center" Height="34" Width="116" Background="#FF72B359" FontSize="16" FontWeight="Bold" Grid.Row="1" Click="btnRegister_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnBackLogin" Content="Back to login" HorizontalAlignment="Left" Margin="348,0,0,0" VerticalAlignment="Center" Height="34" Width="116" Background="#FF72B359" FontSize="16" FontWeight="Bold" IsCancel="True" Click="btnBackLogin_Click" Grid.Row="1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <ComboBox x:Name="cmbRole" HorizontalAlignment="Left" Height="36" Margin="492,276,0,0" VerticalAlignment="Top" Width="288" FontSize="18"  >
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
        </ComboBox>

    </Grid>
</Window>
